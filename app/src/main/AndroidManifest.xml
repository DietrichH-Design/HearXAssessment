<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <!-- Declare Internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_x"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_x_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.HearXAssessment"
        tools:targetApi="31" >

        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declare TestActivity -->
        <activity android:name=".TestActivity" android:exported="true" />

        <!-- Declare ResultsActivity -->
        <activity android:name=".ResultsActivity" android:exported="true" />

    </application>

</manifest>
